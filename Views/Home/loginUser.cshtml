<body>
    <div class="header">
		<div class="container">
			<div class="logo">
				<a href="#"><span>open</span>Ashop</a>
			</div>
			<div class="header-right">
			<a class="account" href="/Home/logout">Logout</a>
             <a class ="account" href="/Home/info">View info</a>
		    </div>
		</div>
    </div>
    <div class="main-banner banner text-center">
	  <div class="container">    
			<h1>Customize your shop and add items <span class="segment-heading">    in it online </span> with openAshop</h1>
			<p>More the items you have more sale you get</p>
			<a href="/Home/AddItem">Add Item</a>
	  </div>
	</div>
    <div class="container">
    <ul class="w3-ul">
        @foreach(var s in ViewBag.items){
      
	    <a href="#" class="w3-center w3-card-4">
		<li class="row">
		<img src="@Url.Content(s.image)" alt="Item Image" class=" col-md-4 w3-card-4 w3-left"/>
		<section class="w3-light-gray w3-center col-md-6">
		<h5 class="title"><b style="color:green">Item Name : </b>@s.Name</h5>
            <p><b style="color:green"> Item Price :</b> @s.Price</p>
		<span class="cityname"><b style="color:green"> Item desciption : </b> @s.Dis</span>
            <a class="w3-btn w3-red w3-right col-md-2" href="/Home/RemoveItem/@s.Id">Remove</a>
		</section>
		<div class="clearfix"></div>
		</li> 
		</a>
        }
    </ul>
        </div>
@Html.Partial("_footer");
</body>
